@model IEnumerable<nguyenminhthien_5361.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center text-dark mb-5 fw-bold">Sản Phẩm Nổi Bật</h2>
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Product Image" style="height: 230px; object-fit: cover;">
                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title text-center fw-bold text-dark">@item.Name</h5>

                            <div class="d-flex justify-content-center align-items-center mb-3">
                                <span class="fw-semibold text-muted">Giá:</span>
                                <span class="ms-2 text-danger fw-bold">@item.Price.ToString("#,##0") Vnđ</span>
                            </div>

                            <div class="mt-auto">
                                <a asp-controller="ShoppingCart"
                                   asp-action="AddToCart"
                                   asp-route-productId="@item.Id"
                                   asp-route-quantity="@numOfQuantity"
                                   class="btn btn-outline-dark w-100 d-flex justify-content-center align-items-center">
                                    <i class="bi bi-cart-fill me-2"></i> Thêm vào giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
