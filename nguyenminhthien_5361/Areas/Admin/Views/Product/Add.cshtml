@model nguyenminhthien_5361.Models.Product

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">🛒 Add New Product</h4>
                </div>
                <div class="card-body px-4 py-4">
                    <form asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Product Name</label>
                            <input asp-for="Name" class="form-control rounded-3" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">Price (VNĐ)</label>
                            <input asp-for="Price" class="form-control rounded-3" placeholder="Enter product price" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select rounded-3"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">Product Image</label>
                            <input type="file" asp-for="ImageUrl" class="form-control rounded-3" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-primary px-4 shadow-sm">
                                ← Back to List
                            </a>
                            <div>
                                <button type="submit" class="btn btn-success px-4 me-2 shadow-sm">➕ Add</button>
                                <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
