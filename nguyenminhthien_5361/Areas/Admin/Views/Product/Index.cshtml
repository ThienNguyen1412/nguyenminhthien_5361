@model IEnumerable<nguyenminhthien_5361.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .product-list-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fdfdfd;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.08);
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #333;
    }

    .add-button {
        margin-bottom: 20px;
        display: flex;
        justify-content: flex-end;
    }

        .add-button a {
            padding: 10px 20px;
            font-weight: bold;
            border-radius: 6px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .add-button a:hover {
                background-color: #0056b3;
            }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 15px;
    }

    thead {
        background-color: #f1f1f1;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        vertical-align: middle;
    }

        td a {
            margin-right: 10px;
            text-decoration: none;
            color: #007bff;
        }

            td a:hover {
                text-decoration: underline;
            }

    .product-img {
        max-width: 80px;
        max-height: 80px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .no-image {
        color: #888;
        font-style: italic;
    }

    a:focus {
        outline: none;
        box-shadow: none;
        background: none;
    }
</style>

<div class="product-list-container">
    <h2>Products</h2>

    <div class="add-button">
        <a asp-area="Admin" asp-controller="Product" asp-action="Add">+ Add Product</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="Product Image" class="product-img" />
                        }
                        else
                        {
                            <span class="no-image">No Image</span>
                        }
                    </td>
                    <td>@(product.Category?.Name ?? "No Category")</td>
                    <td>
                        <a asp-area="Admin" asp-action="Display" asp-route-id="@product.Id">View</a>
                        <a asp-area="Admin" asp-action="Update" asp-route-id="@product.Id">Edit</a>
                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
